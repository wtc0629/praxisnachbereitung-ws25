{
  "name": "DB-Light + MQTT Starter",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "forwardPorts": [
    8000,
    5432,
    1883,
    9001
  ],
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.tabSize": 2,
        "files.eol": "\\n"
      }
    }
  }
}
